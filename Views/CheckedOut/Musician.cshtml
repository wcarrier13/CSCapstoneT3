@model Lizst.Models.MusicianAndPieces

@{
    ViewData["Title"] = "Musician";
}


<h1 style="padding-bottom:20px; padding-top:20px;">Checked Out Pieces</h1>

<div class="card border-info">
    <h3 class="card-header bg-info" style="color:white;">@Model.Musician.MusicianName</h3>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Score</th>
                    <th>Part</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Pieces.Count(); i++)
                {
                    <tr>
                        <td>
                            @Model.Scores[i].Title
                        </td>
                        <td>
                            @Model.Pieces[i].Instrument
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="text-center" style="padding-top:20px">

    <a style="width:130px;" class="btn btn-info" asp-action="Index">Back to List</a>
</div>

