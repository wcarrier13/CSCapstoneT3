@model Lizst.Models.Ensemble

@{
    ViewData["Title"] = "Add Ensemble";
}

<form asp-action="AddEnsemble" style="padding-top:20px; padding-bottom:20px;">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <fieldset>
        <legend><b>Add Ensemble</b></legend>
        <div class="form-group">
            <label asp-for="EnsembleName">Ensemble Name: </label>
            <input asp-for="EnsembleName" class="form-control" />
            <span asp-validation-for="EnsembleName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Year">Year: </label>
            <input asp-for="Year" class="form-control" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Conductor">Conductor / Director: </label>
            <input asp-for="Conductor" class="form-control" />
            <span asp-validation-for="Conductor" class="text-danger"></span>
        </div>
    </fieldset>
    <input type="submit" name="add" value="Save" class="btn btn-primary" style="width: 180px;" />
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
