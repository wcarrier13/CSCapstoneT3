@model Lizst.Models.Ensemble

@{
    ViewData["Title"] = "Edit Ensemble";
}
<form style="padding-top:20px; padding-bottom:20px;" asp-action="EditEnsemble">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="EnsembleId" />
    <fieldset>
        <legend><b>Edit Ensemble</b></legend>
        <div class="form-group">
            <label for="EnsembleName">Ensemble Name: </label>
            <input asp-for="EnsembleName" class="form-control" />
            <span asp-validation-for="EnsembleName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Year">Year: </label>
            <input asp-for="Year" class="form-control" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Conductor">Conductor / Director: </label>
            <input asp-for="Conductor" class="form-control" />
            <span asp-validation-for="Conductor" class="text-danger"></span>
        </div>
    </fieldset>

    <fieldset>
        <legend><b>Add Instrument</b></legend>
        <div class="form-group">
            <label for="instrumentSelect">Select Instrument: </label>
            <select class="form-control" id="instrumentSelect">
                <option>"Violin 1"  </option>
                <option>"Violin 2"  </option>
                <option>"Viola"     </option>
                <option>"Cello"     </option>
                <option>"Bass"      </option>
            </select>
        </div>
        <div class="form-group">
            <label for="musicianName">Musician Name: </label>
            <textarea class="form-control" id="musicianName" rows="1"></textarea>
        </div>
        <div class="form-group">
            <label for="musicianEmail">Musician Email: </label>
            <textarea class="form-control" id="musicianEmail" rows="1"></textarea>
        </div>
    </fieldset>

    <div class="text-center" style="padding-top: 10px">
        <div class="form-group">
            <input type="submit" name="button" value="Delete"   class="btn btn-danger btn-md" style="width: 180px;" />
            <input type="submit" name="button" value="Save"     class="btn btn-danger btn-md" style="width: 180px;"/>
        </div>
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
