@model IEnumerable<Lizst.Models.MusicianAndPieces>

@{
    ViewData["Title"] = "Checkout";
}

<h1 style="padding-top:10px; padding-bottom:10px;">Checkout</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Musician
            </th>
            <th>
                Scores
            </th>
            <th>
                Pieces
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (MusicianAndPieces musicianAndPieces in Model)
        {
            <tr>
                <td>
                    @musicianAndPieces.Musician.MusicianName
                </td>
                <td></td>
                <td></td>
            </tr>
            for(int i = 0; i < musicianAndPieces.Pieces.Count(); i++)
            {
                <tr>
                    <td></td>
                    <td>@musicianAndPieces.Scores[i].Title</td>
                    <td>@musicianAndPieces.Pieces[i].Instrument</td>
                </tr>
            }
        }
    </tbody>
</table>
<div style="padding-top:10px;" class="text-center">
    <a class="btn btn-info" style="width:170px" asp-action="Confirm">Confirm</a>
</div>
