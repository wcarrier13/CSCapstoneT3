@model IEnumerable<Musician>
@{
    ViewData["Title"] = "Index";
}

<h1 style="padding-top:10px;">Check In Pieces</h1>
@if (Model.Any())
{
    <p>Please select the musician returning the piece.</p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Musician</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Musician m in Model)
            {
                <tr>
                    <td>@m.MusicianName</td>
                    <td><a asp-action="CheckIn" class="btn btn-info btn-sm" style="width:140px; float:right" asp-route-id="@m.MusicianId">Select</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div style="padding-top:90px;" class="text-center">
        <h2 style="padding-top:30px; padding-bottom:30px;">No available pieces to check in.</h2>
    </div>
}

